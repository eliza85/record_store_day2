<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<% if @albums.any? %>
  <ul>
    <% @albums.each do |album| %>
      <li><%= album.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no records to display.</p>
<% end %>

<form action="/albums">
  <div class="form-group">
    <label for="searchID">Search By ID</label>
    <input id="searchID" name="searchID" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<form action="/albums">
  <div class="form-group">
    <label for="searchName">Search By Album Name</label>
    <input id="searchName" name="searchName" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>


<a href="/albums/new">Add a new album</a>

<% @albums.each do |album| %>
    <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
  <% end %>
